#!/sbin/openrc-run
depend() {
       after system.init
}

run() {
        export DISPLAY=:0
        PARAM="-sync -name ShapeOS"
        if [ ! -z $GEOMETRY ]
        then
         PARAM="-geometry $GEOMETRY $PARAM"
         echo $PARAM
        fi
        su -p  -c "/usr/bin/Xnest $PARAM :10" user &
}

start() {
        ebegin "Starting X server"
        run
        eend $?
}
