#!/sbin/openrc-run
depend() {
       after system.init
}

run() {
        export DISPLAY=:0
        PARAM="-sync -name Alpine desktop"
        if [ ! -z $FULLSCREEN ]
        then 
         PARAM="-fullscreen $PARAM"
        fi
        su -p  -c "/usr/bin/Xephyr $PARAM :10" user  > /var/log/X.log 2&>1 &
}

start() {
        ebegin "Starting X server"
        run
        eend $?
}
